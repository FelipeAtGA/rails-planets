<main>
  <h1>This is your random planet</h1>
  <ul id='planetInfo'>
      <li><span>Planet:</span><span class="info"> <%= @planet[1][:name] %></span></li>
      <li><span>Distance from earth:</span><span class="info"> <%= @planet[1][:distance_from_sun] %></span></li>
      <li><span>Diameter:</span><span class="info"> <%= @planet[1][:diameter] %></span></li>
      <li><span>Orbital period:</span><span class="info"> <%= @planet[1][:orbit_period] %></span></li>
  </ul>
</main>
